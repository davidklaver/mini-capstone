<h1>Enter a new product:</h1>
<%= form_tag '/products', method: :post do %>
<p><%= label_tag :name %>
<%= text_field_tag :name %></p>
<p><%= label_tag :price %>
<%= text_field_tag :price %></p>
<p><%= label_tag :image %>
<%= text_field_tag :image %></p>
<p><%= label_tag :description %>
<%= text_field_tag :description %></p>
<p><%= label_tag :supplier_id %>
<%= collection_select(:Product, :supplier_id, Supplier.all, :id, :name) %></p>
<%= submit_tag "Add Product" %>
<% end %>